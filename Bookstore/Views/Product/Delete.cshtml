@model Product

<p>Delete a product</p>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Delete
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 text-white">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                <div class="form-floating py-1 col-12">
                    <label asp-for="Title" class="ms-2 border-0 text-dark"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price" class="ms-2 text-dark"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Author" class="ms-2 text-dark"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ISBN" class="ms-2 text-dark"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}